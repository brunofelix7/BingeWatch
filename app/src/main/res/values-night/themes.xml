<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeBingeWatch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/primary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/night_secondary</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/night_primary</item>
        <item name="android:windowActionBar">@color/night_secondary</item>
        <item name="android:icon">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/primary_color</item>
        <item name="android:titleTextColor">@color/primary_color</item>
    </style>

    <style name="ThemeSplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MaterialThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/night_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/primary_color</item>
        <item name="colorOnSecondary">@color/primary_color</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
    </style>
</resources>